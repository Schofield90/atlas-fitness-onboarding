# Server Configuration
PORT=3000
HOST=0.0.0.0
NODE_ENV=production

# MCP Configuration
MCP_SERVER_URL=ws://localhost:8080
MCP_TIMEOUT=30000
MCP_MAX_RETRIES=3
MCP_RETRY_DELAY=1000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/mcp-bridge.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5
LOG_FORMAT=json

# Health Check
HEALTH_CHECK_TIMEOUT=5000

# CORS Configuration
CORS_ORIGIN=*
CORS_CREDENTIALS=false

# Cache Configuration
CACHE_TTL=300
CACHE_CHECK_PERIOD=600

# Meta Ads Thresholds
CPL_WARNING_THRESHOLD=25
CPL_CRITICAL_THRESHOLD=40
SPEND_WARNING_THRESHOLD=100
SPEND_CRITICAL_THRESHOLD=200
CTR_WARNING_THRESHOLD=0.8
CTR_CRITICAL_THRESHOLD=0.5

# Meta Ads Limits
MAX_ACCOUNTS_PER_REQUEST=25
MAX_TIME_RANGES=3
MAX_CONCURRENT_REQUESTS=10