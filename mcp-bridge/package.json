{
  "name": "mcp-bridge",
  "version": "1.0.0",
  "description": "HTTP bridge service between n8n workflows and Claude Meta MCP",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "docker:build": "docker build -t mcp-bridge .",
    "docker:run": "docker run -p 3000:3000 mcp-bridge",
    "docker:compose": "docker-compose up -d"
  },
  "keywords": [
    "mcp",
    "n8n",
    "meta-ads",
    "bridge",
    "automation",
    "claude"
  ],
  "author": {
    "name": "Sam Schofield",
    "email": "sam@atlas-gyms.co.uk"
  },
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "winston": "^3.11.0",
    "dotenv": "^16.3.1",
    "joi": "^17.11.0",
    "express-rate-limit": "^7.1.5",
    "axios": "^1.6.5",
    "ws": "^8.14.2",
    "uuid": "^9.0.1",
    "lodash": "^4.17.21",
    "moment": "^2.30.1",
    "express-validator": "^7.0.1",
    "http-status-codes": "^2.3.0",
    "node-cache": "^5.1.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.4",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "prettier": "^3.1.1",
    "nock": "^13.4.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ]
  }
}