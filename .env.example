# ================================================
# CORE CONFIGURATION - Required for all portals
# ================================================

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key # SERVER ONLY - Never expose to client

# Base Domain (for production)
NEXT_PUBLIC_BASE_DOMAIN=gymleadhub.co.uk

# ================================================
# ADMIN PORTAL - admin.gymleadhub.co.uk
# ================================================

# Admin-specific secrets (SERVER ONLY)
ADMIN_SECRET_KEY=admin-secret-key-for-superadmin-operations
ADMIN_SENTRY_DSN=https://admin-sentry-dsn@sentry.io/admin-project

# Admin Analytics (can be public)
ADMIN_ANALYTICS_ID=G-ADMIN123456

# ================================================
# OWNER PORTAL - login.gymleadhub.co.uk  
# ================================================

# Stripe (SERVER ONLY)
OWNER_STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
OWNER_STRIPE_WEBHOOK_SECRET=your_webhook_secret
NEXT_PUBLIC_OWNER_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Twilio (SERVER ONLY)
OWNER_TWILIO_ACCOUNT_SID=AC_owner_twilio_sid
OWNER_TWILIO_AUTH_TOKEN=owner_twilio_auth_token
OWNER_TWILIO_PHONE_NUMBER=+1234567890

# OpenAI (SERVER ONLY)
OWNER_OPENAI_API_KEY=sk-owner-openai-api-key

# Redis Cache (SERVER ONLY)
REDIS_URL=redis://localhost:6379

# Owner Analytics & Monitoring
OWNER_SENTRY_DSN=https://owner-sentry-dsn@sentry.io/owner-project
OWNER_ANALYTICS_ID=G-OWNER123456

# Facebook/Meta Integration
OWNER_FACEBOOK_APP_ID=your_meta_app_id
OWNER_FACEBOOK_APP_SECRET=your_meta_app_secret
OWNER_FACEBOOK_VERIFY_TOKEN=your_meta_verify_token
OWNER_FACEBOOK_GRAPH_VERSION=v18.0
OWNER_FACEBOOK_OAUTH_REDIRECT_URI=https://login.gymleadhub.co.uk/api/integrations/meta/callback

# ================================================
# MEMBER PORTAL - members.gymleadhub.co.uk
# ================================================

# Stripe for Members (public key only)
MEMBER_STRIPE_PUBLISHABLE_KEY=pk_test_member_stripe_key

# Member Analytics & Monitoring  
MEMBER_SENTRY_DSN=https://member-sentry-dsn@sentry.io/member-project
MEMBER_ANALYTICS_ID=G-MEMBER123456

# ================================================
# SHARED SERVICES - Used across portals
# ================================================

# Email Service (SERVER ONLY)
RESEND_API_KEY=your_resend_api_key

# File Storage
NEXT_PUBLIC_STORAGE_BUCKET=public-uploads

# Feature Flags
NEXT_PUBLIC_ENABLE_BILLING_MSW_STUB=true
NEXT_PUBLIC_ENABLE_BILLING_RETRY_BUTTON=true

# ================================================
# DEVELOPMENT & TESTING
# ================================================

# Development flags
ENABLE_DEBUG_ROUTES=false # Set to true in development only
BYPASS_MIDDLEWARE=false # Emergency bypass for middleware issues

# Test configuration
TEST_HOST=localhost:3000
TEST_SUPERADMIN_EMAIL=test-admin@gymleadhub.co.uk
TEST_OWNER_EMAIL=test-owner@testgym.com
TEST_MEMBER_EMAIL=test-member@example.com

# ================================================
# LOCAL DEVELOPMENT SETUP
# ================================================

# To test multi-portal setup locally, add these to /etc/hosts:
# 127.0.0.1 admin.localhost
# 127.0.0.1 login.localhost  
# 127.0.0.1 members.localhost
#
# Then access:
# - Admin: http://admin.localhost:3000
# - Owner: http://login.localhost:3000
# - Member: http://members.localhost:3000

# ================================================
# SECURITY NOTES
# ================================================

# 1. Never commit actual values to git
# 2. Use different keys for each environment (dev/staging/prod)
# 3. Rotate keys regularly
# 4. Server-only keys should NEVER have NEXT_PUBLIC_ prefix
# 5. Each portal should have its own analytics and error tracking