# =============================================
# AI-POWERED GYM SAAS PLATFORM - ENVIRONMENT VARIABLES
# =============================================
# Copy this file to .env.local and fill in your values

# =============================================
# SUPABASE CONFIGURATION
# =============================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_JWT_SECRET=your-jwt-secret

# Database (Direct connection for migrations)
DATABASE_URL=postgresql://postgres:password@localhost:54322/postgres

# =============================================
# AUTHENTICATION & SECURITY
# =============================================
NEXTAUTH_SECRET=your-nextauth-secret-min-32-chars
NEXTAUTH_URL=http://localhost:3000
JWT_SECRET=your-jwt-secret-min-32-chars

# =============================================
# AI SERVICES
# =============================================
# OpenAI (GPT-4)
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_ORG_ID=org-your-org-id

# Anthropic (Claude)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key

# Custom AI endpoints (optional)
CUSTOM_AI_ENDPOINT=https://your-ai-endpoint.com
CUSTOM_AI_API_KEY=your-custom-ai-key

# =============================================
# COMMUNICATION SERVICES
# =============================================
# Twilio (SMS, WhatsApp, Voice)
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_PHONE_NUMBER=+441234567890
TWILIO_SMS_FROM=+441234567890
TWILIO_WHATSAPP_FROM=whatsapp:+14155238886
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886
TWILIO_VOICE_FROM=+441234567890
USER_PHONE_NUMBER=+447777777777 # Your phone for call bridging

# Email Services
RESEND_API_KEY=re_your-resend-key
RESEND_FROM_EMAIL=notifications@yourdomain.com
RESEND_DOMAIN=yourdomain.com

# Alternative: SendGrid
SENDGRID_API_KEY=SG.your-sendgrid-key
SENDGRID_FROM_EMAIL=notifications@yourdomain.com

# =============================================
# PAYMENT PROCESSING
# =============================================
# Stripe
STRIPE_PUBLIC_KEY=pk_test_your-stripe-public-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
STRIPE_CONNECT_WEBHOOK_SECRET=whsec_your-connect-webhook-secret

# Platform fees (percentage as decimal)
PLATFORM_FEE_PERCENTAGE=0.03

# =============================================
# GOOGLE SERVICES
# =============================================
# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/api/auth/google/callback

# Google Calendar API
GOOGLE_CALENDAR_WEBHOOK_URL=https://yourdomain.com/api/webhooks/google-calendar

# Google Maps (optional)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-key

# =============================================
# SOCIAL MEDIA INTEGRATIONS
# =============================================
# Facebook/Meta
META_APP_ID=your-facebook-app-id
META_APP_SECRET=your-facebook-app-secret
META_VERIFY_TOKEN=your-webhook-verify-token
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
FACEBOOK_WEBHOOK_VERIFY_TOKEN=your-verify-token

# Instagram (uses Facebook app)
INSTAGRAM_BUSINESS_ACCOUNT_ID=your-instagram-business-id

# =============================================
# ANALYTICS & MONITORING
# =============================================
# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Mixpanel (optional)
MIXPANEL_TOKEN=your-mixpanel-token
NEXT_PUBLIC_MIXPANEL_TOKEN=your-mixpanel-token

# Sentry (error tracking)
SENTRY_DSN=https://your-key@sentry.io/project-id
SENTRY_AUTH_TOKEN=your-sentry-auth-token
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# PostHog (optional)
POSTHOG_API_KEY=your-posthog-key
NEXT_PUBLIC_POSTHOG_KEY=your-posthog-key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# =============================================
# CACHING & PERFORMANCE
# =============================================
# Redis/Upstash
REDIS_URL=redis://localhost:6379
UPSTASH_REDIS_REST_URL=https://your-instance.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-upstash-token

# =============================================
# FILE STORAGE
# =============================================
# Cloudinary (images/videos)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# AWS S3 (alternative)
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=eu-west-2
AWS_S3_BUCKET=your-bucket-name

# =============================================
# PUSH NOTIFICATIONS
# =============================================
# OneSignal
ONESIGNAL_APP_ID=your-onesignal-app-id
ONESIGNAL_REST_API_KEY=your-rest-api-key

# Firebase (alternative)
FIREBASE_SERVICE_ACCOUNT={"type":"service_account",...}

# =============================================
# THIRD-PARTY INTEGRATIONS
# =============================================
# Xero (accounting)
XERO_CLIENT_ID=your-xero-client-id
XERO_CLIENT_SECRET=your-xero-client-secret
XERO_REDIRECT_URI=https://yourdomain.com/api/xero/callback

# Zoom (virtual classes)
ZOOM_CLIENT_ID=your-zoom-client-id
ZOOM_CLIENT_SECRET=your-zoom-client-secret
ZOOM_WEBHOOK_SECRET=your-zoom-webhook-secret

# Nutrition APIs
NUTRITIONIX_APP_ID=your-nutritionix-app-id
NUTRITIONIX_APP_KEY=your-nutritionix-app-key

# =============================================
# DEVELOPMENT & TESTING
# =============================================
# Application
APP_BASE_URL=http://localhost:3000
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Feature flags
ENABLE_SOCIAL_INTEGRATIONS=false
ENABLE_AI_FEATURES=true
ENABLE_CALL_RECORDING=false
ENABLE_XERO_INTEGRATION=false
NEXT_PUBLIC_ENABLE_AI_CHAT=true
NEXT_PUBLIC_ENABLE_NUTRITION=true
NEXT_PUBLIC_ENABLE_MOBILE_APP=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true

# Test mode flags
TEST_MODE=false
SKIP_EMAIL_VERIFICATION=false
USE_TEST_PAYMENT_METHODS=true

# File Storage
MAX_FILE_SIZE=50MB
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,csv,xlsx

# Rate Limiting
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=100

# Webhook URLs (for local development with ngrok)
WEBHOOK_BASE_URL=https://your-ngrok-id.ngrok.io

# =============================================
# DEPLOYMENT & INFRASTRUCTURE
# =============================================
# Vercel
VERCEL_URL=https://your-app.vercel.app
VERCEL_ENV=development

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# =============================================
# SECURITY & COMPLIANCE
# =============================================
# Encryption keys
ENCRYPTION_KEY=your-32-byte-encryption-key
SIGNING_KEY=your-signing-key

# GDPR/Privacy
PRIVACY_POLICY_URL=https://yourdomain.com/privacy
TERMS_OF_SERVICE_URL=https://yourdomain.com/terms

# =============================================
# REGIONAL SETTINGS
# =============================================
DEFAULT_TIMEZONE=Europe/London
DEFAULT_CURRENCY=GBP
DEFAULT_LOCALE=en-GB
DEFAULT_COUNTRY=GB

# =============================================
# CRON JOBS & SCHEDULING
# =============================================
CRON_SECRET=your-cron-secret
ENABLE_CRON_JOBS=true

# =============================================
# MOBILE APP CONFIGURATION
# =============================================
EXPO_PUBLIC_API_URL=https://your-api.com
EXPO_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
EXPO_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# =============================================
# NOTES:
# =============================================
# 1. Never commit .env.local to version control
# 2. Use strong, unique values for all secrets
# 3. Rotate keys regularly for security
# 4. Keep production and development environments separate
# 5. Use environment-specific prefixes (DEV_, PROD_, etc.) when needed
# 6. Ensure all team members have access to a secure password manager
# 7. Document any custom environment variables in your README