# =============================================
# ATLAS FITNESS CRM + BOOKING SAAS
# Environment Variables Template
# =============================================

# Supabase
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_JWT_SECRET=your-jwt-secret

# Database (Direct connection for migrations)
DATABASE_URL=postgresql://postgres:password@localhost:54322/postgres

# Stripe
STRIPE_PUBLIC_KEY=pk_test_your-stripe-public-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
STRIPE_CONNECT_WEBHOOK_SECRET=whsec_your-connect-webhook-secret

# Twilio
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# Email (Choose one)
RESEND_API_KEY=re_your-resend-api-key
# OR
SENDGRID_API_KEY=SG.your-sendgrid-api-key

# Meta (Facebook)
META_APP_ID=your-facebook-app-id
META_APP_SECRET=your-facebook-app-secret
META_VERIFY_TOKEN=your-webhook-verify-token

# Google
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/api/auth/google/callback

# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_ORG_ID=org-your-org-id

# Redis (Optional for caching)
REDIS_URL=redis://localhost:6379
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-upstash-token

# Authentication
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-generate-with-openssl

# Application
APP_BASE_URL=http://localhost:3000
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Feature Flags
ENABLE_SOCIAL_INTEGRATIONS=false
ENABLE_AI_FEATURES=true
ENABLE_CALL_RECORDING=false
ENABLE_XERO_INTEGRATION=false

# Sentry (Optional)
SENTRY_DSN=https://your-key@sentry.io/project-id
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# Analytics (Optional)
POSTHOG_API_KEY=your-posthog-key
MIXPANEL_TOKEN=your-mixpanel-token

# File Storage
MAX_FILE_SIZE=50MB
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,csv,xlsx

# Rate Limiting
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=100

# Webhook URLs (for local development with ngrok)
WEBHOOK_BASE_URL=https://your-ngrok-id.ngrok.io